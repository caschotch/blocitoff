
<div class="row list">
  <div class="col-md-6">
    <h4><strong><%= item.name %></strong></h4>
  </div>
  <div class="col-md-6">
    <p>
      Done with this task? Check here to delete it!
      <%= link_to "", [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok' %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <small>Created on: <%= item.created_at.strftime("%A, %B %d") %></small>
  </div>
</div>
