<div class="container">
  <fieldset>
    <%= form_for [user, item], :html => {:class => "form-inline"} do |f| %>
    <div class="form-group">
      <label>New Item:</label>
        <%= f.text_field :name, class: 'form-control', placeholder: "What needs to be done?" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit Todo Item", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </fieldset>
</div>
